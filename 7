using namespace std;

int main(){


    string j = "aA";

    string s;
    cin>>s;

    char * arr = new char[s.size()+1];

    for(int i=0; i<j.size(); i++){
        arr[i] = s.at(i);
    }

    int count=0;
    for(int i=0; i<s.size(); i++){
       for(int t=0; t<j.size(); t++){
           if(s.at(i)==j.at(t)){
               count++;
           }
       }
    }


    cout<<count;

